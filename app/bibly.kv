ScreenManager:
    HomeScreen:
    ReaderScreen:

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            id: books_list
            viewclass: 'BookItem'
            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

<BookItem@BoxLayout>:
    orientation: 'horizontal'
    spacing: dp(10)
    padding: dp(10)
    Label:
        text: root.book_name
    Label:
        text: str(root.page_number)
    Label:
        text: f"{root.reading_progress}%"
    Button:
        text: 'Open'
        on_press: app.openBook(root.book_name)

<ReaderScreen>:
    name: 'reader'
    BoxLayout:

    FloatLayout:
        Button:
            size_hint: None, None
            size: root.size
            background_color: (0, 0, 0, 0)

        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10

            BoxLayout:
                size_hint_y: None
                height: 70

                Button:
                    text: '<<'
                    text_size: self.width - 20, None
                    on_press: root.prev_page_10()
                    size_hint_x: 1.2
                    background_color: (0.1, 0.1, 0.1, 1)
                    opacity: 0.2

                Label:
                    id: page_label
                    opacity: 0.2

                Button:
                    text: '>>'
                    halign: 'right'
                    text_size: self.width - 20, None
                    on_press: root.next_page_10()
                    size_hint_x: 1.2
                    background_color: (0.1, 0.1, 0.1, 1)
                    opacity: 0.1

            Label:
                id: text_label
                text_size: self.width - 20, None

            BoxLayout:
                size_hint_y: None
                height: 70
                opacity: 0.2

                Button:
                    text: '<'
                    on_press: root.prev_page()

                Button:
                    text: 'A-'
                    on_press: root.decrease_font()
                    size_hint_x: 0.5
                    background_color: (0.1, 0.1, 0.1, 1)

                Button:
                    text: 'A+'
                    on_press: root.increase_font()
                    size_hint_x: 0.5
                    background_color: (0.1, 0.1, 0.1, 1)

                Button:
                    text: '>'
                    on_press: root.next_page()
